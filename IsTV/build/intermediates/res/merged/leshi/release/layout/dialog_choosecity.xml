<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#202020"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/icon_delet"
            android:gravity="center_vertical"
            android:text="选择排序"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/img_close"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/imgbtn_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arrow_up" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="所在城市: "
            android:textSize="12dp" />

        <RadioGroup
            android:id="@+id/rg_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_bj"
                style="@style/RadioButtonSytle"
                android:text="北京"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_sh"
                style="@style/RadioButtonSytle"
                android:text="上海"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_cd"
                style="@style/RadioButtonSytle"
                android:text="成都"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_wh"
                style="@style/RadioButtonSytle"
                android:text="武汉"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_xa"
                style="@style/RadioButtonSytle"
                android:text="西安"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_cq"
                style="@style/RadioButtonSytle"
                android:text="重庆"
                android:textSize="14dp" />

        </RadioGroup>

        <RadioButton
            android:id="@+id/rb_all"
            style="@style/RadioButtonSytle"
            android:text="全部"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="直播时间: "
            android:textSize="12dp" />

        <RadioGroup
            android:id="@+id/rg_choose_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_zj"
                style="@style/RadioButtonSytle"
                android:text="最近"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_zy"
                style="@style/RadioButtonSytle"
                android:text="最远"
                android:textSize="14dp" />

        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="观看人数: "
            android:textSize="12dp" />

        <RadioGroup
            android:id="@+id/rg_choose_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_gao"
                style="@style/RadioButtonSytle"
                android:text="由高到低"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/rb_di"
                style="@style/RadioButtonSytle"
                android:text="由低到高"
                android:textSize="14dp" />

        </RadioGroup>
    </LinearLayout>


</LinearLayout>