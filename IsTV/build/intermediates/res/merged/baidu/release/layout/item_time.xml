<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="30dp">

    <ImageView
        android:id="@+id/point_item_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/timeline_point" />


    <TextView
        android:id="@+id/text_item_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/point_item_timeline"
        android:background="@drawable/timeline_date"
        android:gravity="center_vertical"
        android:text="2015.10"
        android:textColor="@color/black" />

</RelativeLayout>