<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5px" android:color="#272225" />
            <gradient android:angle="270.0" android:endColor="#202020" android:startColor="#202020" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#202020" android:startColor="#202020" />
            <stroke android:width="0.5px" android:color="#272225" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/black" android:startColor="@color/black" />
            <stroke android:width="0.5px" android:color="#272225" />
        </shape>
    </item>

</selector>