<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_bg">

    <TextView
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/line_buttom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_above="@+id/line_buttom"
        android:layout_below="@+id/line_top"
        android:layout_centerHorizontal="true">

        <com.modernsky.istv.view.RoundAngleImageView
            android:id="@+id/roundBac"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:background="@color/grey33"
            android:scaleType="centerCrop"
            app:roundHeight="50dp"
            app:roundWidth="50dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="您须支付"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_num_mongey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="￥ 648"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/line_center"
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="购买"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_num_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_smallmb_selector"
            android:text="648,000"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_state_choisepay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roundBac"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="请选择以下支付方式"
            android:textSize="11sp" />

        <Button
            android:id="@+id/aliPayBtn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_state_choisepay"
            android:layout_centerHorizontal="true"
            android:text="支付宝" />

        <Button
            android:id="@+id/weChatPayBtn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@+id/aliPayBtn"
            android:layout_centerHorizontal="true"
            android:text="微信" />
    </RelativeLayout>
</RelativeLayout>