<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <GridView
        android:id="@+id/gridView_mediacontroller"
        android:layout_width="318dp"
        android:layout_height="223dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@color/mediacontroller_bg"
        android:horizontalSpacing="0dp"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:paddingTop="0dp"
        android:scrollbars="none"
        android:verticalSpacing="0dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/line_below_grid"
        android:layout_width="318dp"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/gridView_mediacontroller"
        android:layout_centerHorizontal="true"
        android:background="@color/blue7b"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_sendGift"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/gridView_mediacontroller"
        android:scaleType="centerCrop"
        android:layout_marginBottom="-31dp"
        android:background="@drawable/but_liwu_kong">

        <com.modernsky.istv.view.RoundAngleImageView
            android:id="@+id/btn_sendgift_media"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/but_liwu"
            app:roundHeight="31dp"
            app:roundWidth="31dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_num__MBconsume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_below_grid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="（剩余MB:23445）"
        android:textColor="@color/white"
        android:textSize="8sp"/>

    <RelativeLayout
        android:id="@+id/layout_giftnum"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:layout_marginTop="105dp"/>

</RelativeLayout>