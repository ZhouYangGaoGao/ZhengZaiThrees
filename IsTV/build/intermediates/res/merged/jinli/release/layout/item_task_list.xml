<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#181818">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingBottom="19dp"
        android:paddingLeft="11dp"
        android:paddingTop="19dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1、每日一签"
                android:textColor="@color/white"
                android:textSize="12dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:text="每日打开应用奖励1草莓"
            android:textColor="#8a8b8c"
            android:textSize="9dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_get"
        android:layout_width="98dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_green_get"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="领取"
                android:textColor="#00e3cb"
                android:textSize="12sp"
                android:visibility="visible"/>

            <RelativeLayout
                android:id="@+id/rl_progress"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/proBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:max="100"
                    android:maxWidth="60dp"
                    android:progress="0"/>

                <TextView
                    android:id="@+id/tv_time_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/proBar"
                    android:layout_centerHorizontal="true"
                    android:text="还差02:30"
                    android:textColor="#9b9c9d"
                    android:textSize="7sp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll_get"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/ll_get"
        android:background="#222222"/>

    <View
        android:id="@+id/view_an"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/view"
        android:background="#222222"/>

    <ImageView
        android:id="@+id/iv_caomei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@id/view_an"
        android:src="@drawable/icon_green"/>


</RelativeLayout>