<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:paddingLeft="16dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/indexView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="5"
            android:textColor="@color/write"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/indexView"
            android:layout_alignBottom="@+id/indexView"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/indexView"
            android:gravity="center_vertical"
            android:text="人气：4953万人"
            android:textColor="@color/text_white_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_songer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/indexView"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:text="tv_songer"
            android:textColor="@color/text_white_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_songer"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/text_white_grey"
            android:text="tv_video_name"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>