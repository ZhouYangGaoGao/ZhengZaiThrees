                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shape_zhengmianzhao" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_state_addwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/layout_upworks"
                android:layout_alignTop="@+id/layout_upworks"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/layout_upworks"
                android:gravity="center_vertical"
                android:text="上传作品:"
                android:textColor="@color/huib1"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_mianze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_state_addwork"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/but_mianze" />

            <TextView
                android:id="@+id/tv_state_mianze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_state_addwork"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/img_mianze"
                android:gravity="center_vertical"
                android:text="免责声明:"
                android:textColor="@color/huib1"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/tv_state_mianze"
                android:layout_alignRight="@+id/tv_state_mianze"
                android:layout_below="@+id/tv_state_mianze"
                android:background="@drawable/line_wordline" />

            <TextView
                android:id="@+id/tv_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_mianze"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="提示: 信息填写完整,转变为选手账户后,赠送5Power！"
                android:textColor="@color/huib1"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/btn_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tishi"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/icon_btn_applyfor_select"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="提交"
                android:textColor="@drawable/textcolr_grey_blue_selector"
                android:textSize="14sp" />

        </RelativeLayout>
    </ScrollView>
