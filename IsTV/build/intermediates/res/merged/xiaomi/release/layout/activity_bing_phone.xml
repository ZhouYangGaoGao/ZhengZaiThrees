<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topcontent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_height"
        android:background="@color/topbar_bg">

        <Button
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_back" />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="backBtn" />

        <TextView
            android:id="@+id/register_titleTet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="绑定手机"
            android:textColor="@color/text_default_color"
            android:textSize="17sp" />
    </RelativeLayout>

    <!-- 手机注册 -->

    <LinearLayout
        android:id="@+id/register_phoneArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topcontent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_phoneEdt"
            style="@style/edit_input_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:drawableBottom="@drawable/edit_line_select"
            android:drawableLeft="@drawable/edit_phone_select"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:hint="请输入11位手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/register_codeEdt"
                style="@style/edit_input_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/register_codeBtn"
                android:background="@color/black"
                android:drawableBottom="@drawable/edit_line_select"
                android:drawableLeft="@drawable/edit_code_select"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/register_codeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_oval_default_color"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/_getRegisterCode"
                android:textColor="@color/text_default_color"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/register_registerBtn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/register_phoneArea"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_oval_default_color"
        android:text="完成"
        android:textColor="@color/text_default_color"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>