<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#181818"
                android:paddingBottom="9dp"
                android:paddingLeft="11dp"
                android:paddingRight="12dp"
                android:paddingTop="9dp">

    <com.modernsky.istv.view.RoundAngleImageView
        android:id="@+id/im_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_5_0_head"
        android:scaleType="centerCrop"
        app:roundHeight="20dp"
        app:roundWidth="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/im_user"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_man"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="七柚姑娘"
                android:textColor="#b6b8b8"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#b6b8b8"
                android:textSize="9dp"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_guanzhu"
        android:layout_width="38dp"
        android:layout_height="19dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/but_guanzhu"
        android:clickable="true"
        android:gravity="center"
        android:text="已关注"
        android:textColor="#808282"
        android:textSize="9dp"/>
    <!--android:background="@drawable/but_guanzhu"-->

</RelativeLayout>