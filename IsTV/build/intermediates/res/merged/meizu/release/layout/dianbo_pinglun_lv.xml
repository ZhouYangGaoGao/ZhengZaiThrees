<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="#1e1e1e"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="10dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:id="@+id/rl_pinglun_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.modernsky.istv.view.RoundAngleImageView
            android:id="@+id/img_grid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_h"
            app:roundHeight="25dp"
            app:roundWidth="25dp"
            app:sideColor="#333333"
            app:sideWidth="2dp" />

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_grid"
            android:layout_marginLeft="20dp"
            android:background="@drawable/dzz_0home_icon_levelbg"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_grid"
            android:text="匿名用户"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@drawable/text_color_white_and_gray_selector_pressed"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="刚刚"
            android:textColor="@color/text_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_video_name"
            android:layout_toRightOf="@+id/img_grid"
            android:text="赞！"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_grey"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textView2"
            android:layout_toRightOf="@id/img_grid"
            android:gravity="right"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_zan"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/inset_btn_good" />

            <TextView
                android:id="@+id/pinlun_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:textColor="@color/text_grey"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/inset_btn_pinglun" />

            <TextView
                android:id="@+id/pinlun_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="(0)"
                android:layout_gravity="bottom"
                android:textColor="@color/text_grey"
                android:textSize="11dp" />
        </LinearLayout>
    </RelativeLayout>

    <com.modernsky.istv.view.NoScroListView
        android:id="@+id/gridview_paly_pinglun"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_pinglun_info"
        android:divider="@drawable/line"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_add_more"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/gridview_paly_pinglun"
        android:background="#232323"
        android:drawableTop="@drawable/line"
        android:gravity="center"
        android:text="点击加载更多评论"
        android:textColor="#585b66"
        android:visibility="gone" />

</RelativeLayout>