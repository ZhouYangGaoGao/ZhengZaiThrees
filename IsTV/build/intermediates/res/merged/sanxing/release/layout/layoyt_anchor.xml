<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black18">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="78dp"
            android:layout_height="78dp">

            <com.modernsky.istv.view.RoundAngleImageView
                android:id="@+id/img_anchor_pic"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                app:roundHeight="39dp"
                app:roundWidth="39dp"
                app:sideColor="@color/grey33"
                app:sideWidth="2dp" />
            <!--android:src="@drawable/dzz_0home_pic_bandpic2"-->
            <TextView
                android:id="@+id/tv_lv_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/dzz_0home_icon_levelbg"
                android:gravity="end|center_vertical"
                android:text="30"
                android:textColor="@color/whitef0"
                android:textSize="5dp" />

            <ImageView
                android:id="@+id/img_anchor_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/dzz_0home_icon_onair" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_name_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/whitef0"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_num_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="@color/grey9a"
            android:textSize="8sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_right"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/ll_left"/>
</RelativeLayout>