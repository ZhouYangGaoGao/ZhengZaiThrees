<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <!-- 引用底部导航栏的布局文件 -->

        <RelativeLayout
            android:id="@+id/rl_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/navi_height"
            android:background="@color/topbar_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_back" />

            <Button
                android:id="@+id/edit_back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null" />

            <TextView
                android:id="@+id/edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="支付"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:src="@drawable/bg_6_5_pay_circle" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="@color/gray_word" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="111dp"
                android:text="您需支付" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="￥200"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="165dp"
                android:text="购买"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="135dp"
                android:text="500，000 M豆"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="请选择以下支付方式"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioGroup
            android:id="@+id/gr_pay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/rb_zhifubao"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/color_yellow_gray_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="支付宝"
                android:textColor="@drawable/text_color_black_gray_selector"
                android:textSize="18dp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rb_weixin"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/color_yellow_gray_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="微信支付"
                android:textColor="@drawable/text_color_black_gray_selector"
                android:textSize="18dp" />
        </RadioGroup>

    </LinearLayout>

</ScrollView>