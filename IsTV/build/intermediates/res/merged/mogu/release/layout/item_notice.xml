<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#272727">

    <RelativeLayout
        android:id="@+id/ll_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2e2e2e"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/icon_arrow_down"
            android:text="30元"
            android:textColor="#e6e6e6" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:maxWidth="350dp"
            android:singleLine="true"
            android:text="类型："
            android:textColor="#e6e6e6"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/im_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/dot_normal_bluedot" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/img_down"
            android:layout_toStartOf="@+id/img_down"
            android:maxLines="2"
            android:text="asdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdf"
            android:textColor="#aaaaaa" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_text"
        android:layout_below="@+id/ll_text"
        android:padding="10dp"
        android:text="2016.02.18  10:00"
        android:textColor="#aaaaaa" />

</RelativeLayout>