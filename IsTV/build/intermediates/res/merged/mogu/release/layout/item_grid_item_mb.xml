<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/num_MB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/icon_bigmb_selector"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="5,000"
        android:textSize="17dp" />

    <RelativeLayout
        android:id="@+id/rl_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_MB"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/text_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/icon_smallmb_selector"
            android:text="送"
            android:textColor="@color/grey"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/num_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/text_send"
            android:text="580"
            android:textSize="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_song"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="￥ 6"
        android:textColor="@color/grey"
        android:textSize="10dp" />

</RelativeLayout>