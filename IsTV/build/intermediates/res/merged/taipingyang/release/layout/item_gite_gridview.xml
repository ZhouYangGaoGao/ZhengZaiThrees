<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="79dp"
    android:background="@color/mediacontroller_bg"
    android:layout_height="75dp">

    <com.modernsky.istv.view.RotateTextView
        android:id="@+id/item_rotate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/jiaobiao_mb"
        android:paddingBottom="15dp"
        android:text="3677"
        android:textColor="@color/write"
        android:textSize="9sp"
        app:degree="45" />

    <ImageView
        android:id="@+id/img_item_giftgrid"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:scaleType="centerCrop"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/tv_name_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item_giftgrid"
        android:layout_centerHorizontal="true"
        android:text="草莓"
        android:textSize="9sp" />
</RelativeLayout>