<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <RelativeLayout
        android:id="@+id/rl_user_livemedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">

        <RelativeLayout
            android:id="@+id/layout_heart"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:minWidth="100dp"
            android:layout_alignBottom="@+id/img_user_livemedia"
            android:layout_marginLeft="27dp"
            android:background="@drawable/bg_touxiang_black"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="">

            <TextView
                android:id="@+id/tv_message_anchor_livemedia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp" />

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_message_anchor_livemedia"
                android:background="@drawable/icon_07bofang_line"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/isAttention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/line"
                android:src="@drawable/icon_hearts"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_name_livemedia"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_above="@+id/layout_heart"
            android:layout_marginLeft="27dp"
            android:background="@drawable/bg_touxiang_jianbian"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="9sp" />

        <com.modernsky.istv.view.RoundAngleImageView
            android:id="@+id/img_user_livemedia"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/pic_touxiang_zhubo"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:roundHeight="18dp"
            app:roundWidth="18dp"
            app:sideColor="@color/white"
            app:sideWidth="1dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:maxWidth="280dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/icon_back_bac"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_num_audiens"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/audienList_livemedia"
        android:layout_marginLeft="9dp"
        android:background="@drawable/pic_yonghu_shuliang"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="9sp" />

    <com.modernsky.istv.view.HorizontalListView
        android:id="@+id/audienList_livemedia"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rl_user_livemedia"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tv_num_audiens"
        android:background="@color/transparent"
        android:dividerHeight="12dp"
        android:maxWidth="280dp" />
    <!--android:layout_toRightOf="@+id/tv_num_audiens"-->


    <!--<TextView-->
    <!--android:id="@+id/tv_time_leave_livemedia"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:text="00:19:10" />-->


    <RelativeLayout
        android:id="@+id/layout_info_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_toRightOf="@+id/rl_user_livemedia">

        <ImageView
            android:id="@+id/btn_report_livemedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:src="@drawable/icon_jubao_selector" />

        <ImageView
            android:id="@+id/btn_share_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/btn_report_livemedia"
            android:src="@drawable/icon_share_selector" />

        <TextView
            android:id="@+id/tv_qxd_mediacontroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_share_media"
            android:background="@drawable/gb_gaoqing_select"
            android:text="高清"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_wutai_mediacontroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_qxd_mediacontroller"
            android:background="@drawable/gb_gaoqing_select"
            android:text="舞台切换"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_jiemudan_mediacontroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_wutai_mediacontroller"
            android:background="@drawable/gb_gaoqing_select"
            android:text="节目单"
            android:textColor="@color/black"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_lock_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:background="@drawable/but_suo" />

    <ListView
        android:id="@+id/lv_qxd_mediacontroller"
        android:layout_width="80dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/layout_info_video"
        android:layout_toLeftOf="@+id/btn_lock_media"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:visibility="invisible" />
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_above="@+id/btn_share_media"-->

    <ListView
        android:id="@+id/lv_wutai_mediacontroller"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_info_video"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/btn_lock_media"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/messList_livemedia"
        android:layout_width="258dp"
        android:layout_height="153dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbars="none"/>

    <RelativeLayout
        android:id="@+id/layout_vertical"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="9dp">


        <TextView
            android:id="@+id/leftTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_line_live"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="直播中  00:10:00"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <com.modernsky.istv.view.RoundAngleImageView
            android:id="@+id/img_user_livemedia_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/pic_touxiang_zhubo"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:roundHeight="12dp"
            app:roundWidth="12dp"
            app:sideColor="@color/white"
            app:sideWidth="1dp" />
    </RelativeLayout>


    <!--android:background="@color/blue7b"-->
    <!--<ImageView-->
    <!--android:id="@+id/btn_sendgift_media"-->
    <!--android:layout_width="61dp"-->
    <!--android:layout_height="61dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="15dp"-->
    <!--android:src="@drawable/but_liwu"-->
    <!--/>-->


    <com.modernsky.istv.view.RoundAngleImageView
        android:id="@+id/btn_sendgift_media"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/but_liwu_kong"
        android:scaleType="centerCrop"
        android:src="@drawable/but_liwu"
        app:roundHeight="31dp"
        app:roundWidth="31dp" />


    <TextView
        android:id="@+id/tv_num__MBconsume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="（剩余M豆:0）"
        android:textColor="@color/white"
        android:textSize="8sp" />


    <LinearLayout
        android:id="@+id/ll_live"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/btn_zan_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_zan_select" />

        <ImageView
            android:id="@+id/btn_chat_media"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/but_shuru" />

        <ImageView
            android:id="@+id/btn_changesize_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="11dp"
            android:src="@drawable/but_pinmu_bac" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ll_look_forword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#aa000000"
            android:layout_alignParentBottom="true"
            ></View>
        <SeekBar
            android:id="@+id/seek_video"
            style="@style/MediaController_SeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:focusable="true"
            android:max="1000" />

        <LinearLayout
            android:layout_below="@+id/seek_video"
            android:id="@+id/ll_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/im_play_or_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mediacontroller_button"
                android:contentDescription="@string/mediacontroller_play_pause"
                android:scaleType="fitXY"
                android:src="@drawable/mediacontroller_pause" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mediacontroller_button"
                android:clickable="false"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/icon_07bofang_line" />

            <ImageButton
                android:id="@+id/im_play_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mediacontroller_button"
                android:contentDescription="@string/mediacontroller_play_pause"
                android:src="@drawable/icon_07bofang_next"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_video_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_video_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="00:00:00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12dp" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/img_show_tanmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null" />


            <ImageView
                android:id="@+id/btn_zan_lookforward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/but_zan"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/btn_chat_lookforward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/but_pinglun_small"
                android:visibility="gone" />


            <ImageButton
                android:id="@+id/ImageButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="visible"
                android:src="@drawable/icon_07bofang_line" />

            <ImageView
                android:id="@+id/btn_fangda_lookforward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="11dp"
                android:src="@drawable/icon_07bofang_suoxiao" />
            <!--android:src="@drawable/icon_fullsize"-->
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>