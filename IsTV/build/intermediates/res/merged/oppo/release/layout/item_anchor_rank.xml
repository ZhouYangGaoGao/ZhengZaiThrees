<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/grey31" />

    <View
        android:id="@+id/v_line"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#8091d8f6" />

    <com.modernsky.istv.view.RoundAngleImageView
        android:id="@+id/item_img_user"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_below="@id/v_line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:roundHeight="27dp"
        app:roundWidth="27dp" />

    <TextView
        android:id="@+id/tv_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_img_user"
        android:layout_marginLeft="40dp"
        android:background="@drawable/dzz_0home_icon_levelbg"
        android:singleLine="true"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="7sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_img_user"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lasdf"
            android:textColor="@color/whitee6"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_user_name"
            android:layout_marginTop="2dp"
            android:text="sdd"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/item_renqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/item_tv_lable"
            android:layout_marginTop="2dp"
            android:text="人气："
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/item_renqi"
            android:paddingTop="2dp"
            android:textColor="@color/default_blue_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="2"
            android:textColor="#afafaf"
            android:textSize="30sp" />


    </RelativeLayout>


</RelativeLayout>