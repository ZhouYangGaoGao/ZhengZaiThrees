<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_wechat_pop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_weixin" />

    <ImageView
        android:id="@+id/img_pyq_pop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_pyq" />

    <ImageView
        android:id="@+id/img_weibo_pop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_weibo" />

    <ImageView
        android:id="@+id/img_qq_pop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_qq" />

    <ImageView
        android:id="@+id/img_copyurl_pop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/icon_lianjie" />
    <ImageView
        android:id="@+id/img_right"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:visibility="invisible"
        android:background="@drawable/icon_lianjie" />

</LinearLayout>