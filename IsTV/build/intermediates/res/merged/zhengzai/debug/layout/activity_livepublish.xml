<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/but_daojishi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_state"
            android:layout_width="wrap_content"
            android:text="距离直播开始"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/dotImg"
            android:id="@+id/tv_time_leave_livemedia"
            android:layout_below="@+id/tv_time_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:text="00:15:00"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/dotImg"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dot_green"
            android:layout_height="wrap_content" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/ll_num_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_youxiajiao"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_zan"
            android:drawablePadding="5dp"
            android:text="0"
            android:textColor="@color/purple36" />

        <TextView
            android:id="@+id/tv_num_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_mb"
            android:drawablePadding="5dp"
            android:text="0"
            android:textColor="@color/purple36" />


        <TextView
            android:id="@+id/tv_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_strawberry"
            android:drawablePadding="5dp"
            android:text="0"
            android:textColor="@color/purple36" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/giftLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_num_money"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
         />

    <ImageView
        android:id="@+id/btn_play_livemedia"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:src="@drawable/dzz_player_but_stop_androi"
       />
    <!--android:layout_width="92dp"-->
    <!--android:layout_height="94dp"-->
    <!--android:background="@drawable/but_end"-->


    <ImageView
        android:id="@+id/btn_moretime_livemedia"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/but_time" />

    <TextView
        android:id="@+id/tv_num_strawberry_consume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="（消耗100Power）"
        android:textColor="@color/white"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tv_time_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_num_strawberry_consume"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:text="+10min"
        android:textColor="@color/white"
        android:textSize="7sp" />


    <com.modernsky.istv.view.LivePublisherMediacontroler
        android:id="@+id/livePublisherMedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include layout="@layout/mediacontroler_livepublisher" />
    </com.modernsky.istv.view.LivePublisherMediacontroler>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/network_gifimageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>