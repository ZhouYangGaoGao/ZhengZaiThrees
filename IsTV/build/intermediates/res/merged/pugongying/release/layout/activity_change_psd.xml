<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topcontent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_height"
        android:background="@color/topbar_bg">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_back" />


        <TextView
            android:id="@+id/register_titleTet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/text_default_color"
            android:textSize="17sp" />
    </RelativeLayout>

    <!-- 手机注册 -->

    <LinearLayout
        android:id="@+id/register_phoneArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topcontent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_phoneEdt"
            style="@style/edit_input_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:drawableBottom="@drawable/edit_line_select"
            android:drawableLeft="@drawable/edit_psd_select"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:paddingLeft="10dp" />
        <!--android:inputType="textPassword|numberPassword"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/register_codeEdt"
                style="@style/edit_input_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@color/black"
                android:drawableBottom="@drawable/edit_line_select"
                android:drawableLeft="@drawable/edit_psd_select"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_findPas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phoneArea"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/login_shoujiduanxinBtn"
            style="@style/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_register_1_findpassword"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/phone_login" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_registerBtn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rl_findPas"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_oval_default_color"
        android:text="完成"
        android:textColor="@color/text_default_color"
        android:textSize="17sp"
        android:textStyle="bold" />


</RelativeLayout>