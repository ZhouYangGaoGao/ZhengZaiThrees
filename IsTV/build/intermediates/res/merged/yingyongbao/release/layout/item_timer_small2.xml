<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="24dp"
        android:layout_height="64dp"
        android:layout_marginLeft="@dimen/timershaft"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#525252"></LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weiyouzhoubangyuan" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#525252"></LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:layout_marginLeft="30dp"

        android:src="@drawable/icon_3" />
    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="44dp"
        android:background="@drawable/timeshaft"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="40dp">

        <TextView
            android:id="@+id/item_timer_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一周榜单"
            android:textColor="#616161"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_timer_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2016/02/18-2016/04/20"
            android:textColor="#616161"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>