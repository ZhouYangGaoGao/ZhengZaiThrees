<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.modernsky.istv.view.SlidingMenu xmlns:hyman="http://schemas.android.com/apk/res/com.modernsky.istv"
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2e2e2e"
        android:overScrollMode="never"
        hyman:rightPadding="60dp"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/include_left_menu"
                layout="@layout/left_menu"
                android:visibility="invisible" />

            <include layout="@layout/activity_main_content" />
        </LinearLayout>
    </com.modernsky.istv.view.SlidingMenu>

    <include
        layout="@layout/layout_diantai"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="50dp" />

    <include
        android:id="@+id/layoutButtom_drag"
        layout="@layout/include_buttom_drag"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:visibility="invisible" />

</RelativeLayout>