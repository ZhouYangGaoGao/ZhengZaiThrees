<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rl_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/point_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/timeline_point" />

            <TextView
                android:id="@+id/text_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/point_item_time"
                android:background="@drawable/timeline_date"
                android:gravity="center_vertical"
                android:text="2015.10"
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <!--android:layout_toLeftOf="@+id/show_Btnxianchangzhipo"-->

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="北京草莓音乐节"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="time"
                android:textColor="@color/text_white_grey"
                android:textSize="12dp" />
        </LinearLayout>
        <!--
      <TextView
            android:id="@+id/show_Btnxianchangzhipo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/common_linewhite_contentback"
            android:clickable="false"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="观看现场直播 >"
            android:textColor="@color/white"
            android:textSize="12dp" />
        -->
        <ImageView
            android:id="@+id/tv_time_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timeLauout"
            android:layout_alignLeft="@+id/timeLauout"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/timeLauout"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/liveing_button"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/timeLauout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:background="@color/black">

                <TextView
                    android:id="@+id/up1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/down1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/up1"
                    android:gravity="center_horizontal"
                    android:text="Days"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/up2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/down2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/up2"
                    android:gravity="center_horizontal"
                    android:text="Hours"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/up3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/down3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/up3"
                    android:gravity="center_horizontal"
                    android:text="Mins"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/up4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/down4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/up4"
                    android:gravity="center_horizontal"
                    android:text="Secs"
                    android:textSize="8dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>