<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:alpha="0.7"
        android:text="发布预告"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/icon_delet" />
    <!--android:layout_marginRight="18dp"-->
    <!--android:layout_marginTop="36dp"-->

    <RelativeLayout
        android:layout_width="284dp"
        android:layout_height="944dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_wenzi">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_apply"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layout_inner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_marginTop="49dp">

                    <com.modernsky.istv.view.RoundAngleImageView
                        android:id="@+id/im_user"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shape_zhengmianzhao"
                        app:roundHeight="51dp"
                        app:roundWidth="51dp"
                        app:sideColor="@color/grey4d"
                        app:sideWidth="4dp" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_levelbg"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/whitef0"
                        android:textSize="10dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.7"
                    android:gravity="end|center_vertical"
                    android:text=""
                    android:textColor="@color/whiteef"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="35dp"
                    android:alpha="0.7"
                    android:drawableLeft="@drawable/icon_zhibo"
                    android:drawablePadding="8dp"
                    android:text="他们即将直播"
                    android:textColor="@color/whitee6"
                    android:textSize="10dp" />

                <com.modernsky.istv.view.HorizontalListView
                    android:id="@+id/anchorList"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/transparent"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.modernsky.istv.view.RoundAngleImageView
                            android:id="@+id/img_anchor_pic_left"
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            app:roundHeight="37dp"
                            app:roundWidth="37dp"
                            app:sideColor="@color/grey33"
                            app:sideWidth="3dp" />

                        <TextView
                            android:id="@+id/tv_lv_anchor_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/dzz_0home_icon_levelbg"
                            android:text="0"
                            android:textColor="@color/whitef0"
                            android:textSize="8dp" />

                        <ImageView
                            android:id="@+id/img_anchor_state_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_anchor_pic_left"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/dzz_0home_icon_onair"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_name_anchor_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_anchor_pic_left"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/whitef0"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.modernsky.istv.view.RoundAngleImageView
                            android:id="@+id/img_anchor_pic_center"
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            app:roundHeight="37dp"
                            app:roundWidth="37dp"
                            app:sideColor="@color/grey33"
                            app:sideWidth="3dp" />

                        <TextView
                            android:id="@+id/tv_lv_anchor_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/dzz_0home_icon_levelbg"
                            android:text="0"
                            android:textColor="@color/whitef0"
                            android:textSize="8dp" />

                        <ImageView
                            android:id="@+id/img_anchor_state_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_anchor_pic_center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/dzz_0home_icon_onair"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_name_anchor_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_anchor_pic_center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/whitef0"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.modernsky.istv.view.RoundAngleImageView
                            android:id="@+id/img_anchor_pic_right"
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            app:roundHeight="37dp"
                            app:roundWidth="37dp"
                            app:sideColor="@color/grey33"
                            app:sideWidth="3dp" />

                        <TextView
                            android:id="@+id/tv_lv_anchor_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/dzz_0home_icon_levelbg"
                            android:text="0"
                            android:textColor="@color/whitef0"
                            android:textSize="8dp" />

                        <ImageView
                            android:id="@+id/img_anchor_state_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_anchor_pic_right"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/dzz_0home_icon_onair"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_name_anchor_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_anchor_pic_right"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/whitef0"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="33dp"
                    android:alpha="0.7"
                    android:text="相关视频"
                    android:textColor="@color/whitee6"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:id="@+id/playerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:background="@color/black">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.letv.universal.widget.ReSurfaceView
                            android:id="@+id/sf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_upplayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/mediacontroller_play" />

                        <SeekBar
                            android:id="@+id/seek_video"
                            style="@style/MediaController_SeekBar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/ll_video"
                            android:layout_marginBottom="1dp"
                            android:focusable="true"
                            android:max="1000" />

                        <LinearLayout
                            android:id="@+id/ll_video"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_play"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/mediacontroller_play" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/icon_07bofang_line" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/name_video"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text=""
                                    android:textColor="@color/huib1"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/time_video"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/name_video"
                                    android:layout_marginTop="2dp"
                                    android:text="05:44"
                                    android:textColor="@color/huib1"
                                    android:textSize="9dp" />
                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_state_what"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="20dp"
                    android:text="这是什么："
                    android:textColor="@color/white"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_content_what"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/what"
                    android:textColor="@color/huib1"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="33dp"
                    android:text="致校园选手："
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_content_anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/toanchor"
                    android:textColor="@color/huib1"
                    android:textSize="9dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="33dp"
                    android:text="致广大师生："
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_content_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/tostudent"
                    android:textColor="@color/huib1"
                    android:textSize="9dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="33dp"
                    android:text="参加要求："
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/required"
                    android:textColor="@color/huib1"
                    android:textSize="9dp"
                    android:visibility="visible" />


            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="175dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/icon_applyanchor_select"
            android:gravity="center"
            android:text="申请"
            android:textColor="@drawable/textcolor_whitefo_and_blue_seletor"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
